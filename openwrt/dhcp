
config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option rebind_protection '1'
	option rebind_localhost '1'
	option cachesize '1000'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.d/resolv.conf.auto'
	option localservice '1'
	option ednspacket_max '1232'
	list server '1.1.1.1'
	list server '9.9.9.9'
	list server '2606:4700:4700::1111'
	list server '2620:fe::fe'
	list addnhosts '/etc/dnsmasq.d/dhcp-hosts-expanded'
	option expandhosts '1'
	option dhcp_fqdn '1'
	list domain 'lan,lan'
	list domain 'cluster,cluster'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option leasetime '12h'
	option dhcpv4 'server'
	option dhcpv6 'server'
	option ra 'server'
	option ra_slaac '1'
	list ra_flags 'managed-config'
	list ra_flags 'other-config'
	option ra_management '1'
	option ra_use_dns '1'
	list dhcp_option '15,lan'
	option domain 'lan'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

config dhcp 'cluster'
	option interface 'cluster'
	option start '100'
	option limit '150'
	option leasetime '12h'
	list dhcp_option '6,192.168.4.1'
	list dhcp_option '15,cluster'
	option domain 'cluster'

config domain
	option name 'router-kg.cluster'
	option ip '192.168.4.1'

config domain
	option name 'pve1.cluster'
	option ip '192.168.4.21'

config domain
	option name 'ubuntupve.cluster'
	option ip '192.168.4.24'

config host
	option ip '192.168.1.183'
	list mac 'BC:A5:11:11:B7:B7'
	option name 'netgear'

config host
	option ip '192.168.1.157'
	list mac 'E8:9C:25:09:39:D0'
	option name 'ap-wozi'

config dhcp 'iot'
	option interface 'iot'
	option start '100'
	option limit '150'
	option leasetime '12h'

config host
	option name 'nas'
	option ip '192.168.4.127'
	list mac 'BC:24:11:3C:E9:4F'

