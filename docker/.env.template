# =============================================================================
# Environment Variables Template for Docker Compose Deployments
# =============================================================================
# Copy this file to .env and replace the {{ PLACEHOLDER }} values
# with your actual credentials before deployment.
# =============================================================================

# -----------------------------------------------------------------------------
# System (optional - these have sensible defaults)
# -----------------------------------------------------------------------------
UID=1000
GID=1000
TZ=Europe/Berlin

# -----------------------------------------------------------------------------
# PostgreSQL (required for: postgrest, zitadel, pgadmin)
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD={{ POSTGRES_PASSWORD }}

# -----------------------------------------------------------------------------
# PostgREST JWT Secret (required for: postgrest)
# Minimum 32 characters for HS256 algorithm
# -----------------------------------------------------------------------------
JWT_SECRET={{ JWT_SECRET }}

# -----------------------------------------------------------------------------
# Zitadel Masterkey (required for: zitadel)
# Minimum 32 characters for encryption
# -----------------------------------------------------------------------------
ZITADEL_MASTERKEY={{ ZITADEL_MASTERKEY }}
