# =============================================================================
# Environment Variables for Docker Compose Deployments
# =============================================================================
# Example .env file with sample passwords.
# Replace with secure passwords for production use!
# =============================================================================

# -----------------------------------------------------------------------------
# System (optional - these have sensible defaults)
# -----------------------------------------------------------------------------
UID=1000
GID=1000
TZ=Europe/Berlin

# -----------------------------------------------------------------------------
# PostgreSQL (required for: postgres, postgrest, zitadel, pgadmin)
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=postgres123

# -----------------------------------------------------------------------------
# PostgREST API Login (required for: postgrest with create-app-db.sh --postgrest)
# Generated by create-app-db.sh on first run with --postgrest flag
# -----------------------------------------------------------------------------
API_LOGIN_PASSWORD=api_login_password_123

# -----------------------------------------------------------------------------
# PostgREST JWT Secret (required for: postgrest)
# Minimum 32 characters for HS256 algorithm
# -----------------------------------------------------------------------------
JWT_SECRET=your-256-bit-secret-key-here-min32

# -----------------------------------------------------------------------------
# Zitadel Masterkey (required for: zitadel)
# Minimum 32 characters for encryption
# -----------------------------------------------------------------------------
ZITADEL_MASTERKEY=zitadel-masterkey-32-chars-min!!

# -----------------------------------------------------------------------------
# MariaDB (required for: mariadb, phpmyadmin)
# -----------------------------------------------------------------------------
MARIADB_ROOT_PASSWORD=mariadb123
MARIADB_PASSWORD=appuser123

# -----------------------------------------------------------------------------
# pgAdmin (required for: pgadmin)
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_PASSWORD=admin123
