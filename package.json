{
  "name": "oci-lxc-deployer",
  "version": "0.1.22",
  "description": "Packaged web UI and backend for OCI LXC Deployer",
  "type": "module",
  "draft": true,
  "author": {
    "email": "volkmar.nissen@gmail.com",
    "name": "Volkmar Nissen"
  },
  "scripts": {
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd backend && pnpm build",
    "build:frontend": "cd frontend && pnpm build",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "PWDEBUG=1 playwright test --headed",
    "install-hooks": "sh scripts/install-git-hooks.sh",
    "lint:lang": "node scripts/check-language.js",
    "postinstall": "pnpm install-hooks",
    "prettier": "cd backend && pnpm prettier && cd ../frontend && pnpm prettier",
    "sync-dependencies": "node scripts/sync-dependencies.mjs",
    "dupcheck": "npx jscpd --config .jscpd.json backend/src frontend/src",
    "prepack": "pnpm sync-dependencies"
  },
  "bin": {
    "oci-lxc-deployer": "backend/dist/oci-lxc-deployer.mjs"
  },
  "files": [
    "backend/dist",
    "frontend/dist",
    "json",
    "schemas",
    "examples",
    "scripts/git-hooks",
    "scripts/install-git-hooks.sh"
  ],
  "ociLxcDeployer": {
    "frontendDir": "frontend/dist/webapp-angular/browser"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "json-source-map": "^0.6.1",
    "jsonschema": "^1.5.0",
    "path": "^0.12.7",
    "socket.io": "^4.8.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "vitest": "^4.0.12"
  }
}
