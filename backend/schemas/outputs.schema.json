{
  "$id": "outputs",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Outputs",
  "description": "Schema for outputs: either a single object with id and value, or an array of such objects.",
  "oneOf": [
    { "$ref": "#/$defs/outputObject" },
    {
      "type": "array",
      "items": { "$ref": "#/$defs/outputObject" }
    }
  ],
  "$defs": {
    "outputObject": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "value": { "type": ["string", "boolean", "number"] }
      },
      "required": ["id", "value"],
      "additionalProperties": false
    }
  }
}
