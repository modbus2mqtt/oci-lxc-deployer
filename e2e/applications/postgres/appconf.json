{
    "name": "postgres",
    "description": "PostgreSQL is an open source object-relational database system.",
    "tasktype": "postgres",
    "validation": {
        "waitBeforeValidation": 30,
        "containers": [
            { "image": "postgres", "state": "running" }
        ],
        "ports": [
            { "port": 5432, "service": "PostgreSQL" }
        ],
        "commands": [
            {
                "command": "docker exec $(docker ps -qf ancestor=postgres) pg_isready -U postgres",
                "expectedExitCode": 0,
                "description": "PostgreSQL is accepting connections"
            }
        ]
    }
}
