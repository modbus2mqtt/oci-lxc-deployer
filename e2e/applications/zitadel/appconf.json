{
    "name": "zitadel",
    "description": "ZITADEL is an open source identity management platform.",
    "tags": ["identity", "auth"],
    "tasktype": "postgres",
    "framework": "docker-compose",
    "dependsOn": ["postgres"],
    "installParams": {
        "bridge": "vmbr1",
        "POSTGRES_HOST": "10.0.0.50"
    },
    "validation": {
        "waitBeforeValidation": 60,
        "containers": [
            { "image": "zitadel/zitadel", "state": "running" }
        ],
        "ports": [
            { "port": 8080, "protocol": "tcp", "service": "zitadel" }
        ]
    }
}
