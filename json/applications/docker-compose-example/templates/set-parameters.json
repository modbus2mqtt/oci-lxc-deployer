{
  "execute_on": "ve",
  "name": "Set Parameters",
  "description": "Set application-specific parameters for Docker Compose application",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "type": "string",
      "default": "docker-compose-app",
      "required": true,
      "description": "Hostname for the LXC container"
    },
    {
      "id": "compose_file",
      "name": "Docker Compose File",
      "type": "string",
      "upload": true,
      "required": true,
      "description": "Docker Compose YAML file (upload)"
    },
    {
      "id": "env_file",
      "name": "Environment File (.env)",
      "type": "string",
      "upload": true,
      "required": false,
      "description": "Environment variables file (.env) (upload, optional)"
    },
    {
      "id": "compose_project",
      "name": "Compose Project Name",
      "type": "string",
      "default": "",
      "description": "Project name for Docker Compose (defaults to hostname if not provided)"
    },
    {
      "id": "ostype",
      "name": "OS Type",
      "type": "string",
      "default": "alpine",
      "enumValues": ["alpine", "debian", "ubuntu"],
      "description": "Operating system type for the LXC container",
      "advanced": true
    }
  ],
  "commands": [
    {
      "properties": [
        { "id": "ostype", "value": "{{ ostype }}" }
      ]
    }
  ]
}
