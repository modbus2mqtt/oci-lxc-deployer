{
  "execute_on": "ve",
  "name": "Set Parameters",
  "description": "Set application-specific parameters for OCI LXC Deployer",
  "parameters": [{
    "id": "volumes",
    "name": "Volumes",
    "type": "string",
    "multiline": true,
    "required": false,
    "description": "Volume mappings for the container (one per line, format: name=path or name=path,mode)"
  }],
  "commands": [
    {
      "name": "set-properties",
      "properties": [
        {
          "id": "hostname",
          "value": "oci-lxc-deployer"
        },
        {
          "id": "oci_image",
          "value": "ghcr.io/modbus2mqtt/oci-lxc-deployer"
        },
        {
          "id": "uid",
          "value": "0"
        },
        {
          "id": "username",
          "value": "root"
        },
        {
          "id": "volume_backup",
          "value": "true"
        },
        {
          "id": "volumes",
          "default": "config=/config\nsecure=/secure,0700"
        }
      ]
    }
  ]
}