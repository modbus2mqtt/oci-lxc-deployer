{
  "name": "Configure Samba Service",
  "execute_on": "lxc",
  "description": "Create Samba user and start service. Expects smb.conf already in place via 155-conf-upload-pre-start-files.json.",
  "skip_if_all_missing": ["smb_user"],
  "parameters": [
    {
      "id": "smb_user",
      "name": "Samba Username",
      "type": "string",
      "required": true,
      "description": "Username for Samba authentication"
    },
    {
      "id": "smb_password",
      "name": "Samba Password",
      "type": "string",
      "required": true,
      "secure": true,
      "description": "Password for Samba authentication"
    }
  ],
  "commands": [
    {
      "script": "post-samba-configure-service.sh",
      "description": "Create Samba user and start service"
    }
  ]
}
