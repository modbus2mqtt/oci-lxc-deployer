{
  "name": "MariaDB",
  "description": "MariaDB is an open source relational database management system.",
  "extends": "oci-image",
  "icon": "icon.svg",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "required": false,
      "type": "string",
      "description": "Hostname for the LXC container",
      "template": "100-conf-create-configure-lxc.json",
      "templatename": "Create and Configure LXC",
      "default": "mariadb"
    },
    {
      "id": "volumes",
      "name": "Volumes",
      "type": "string",
      "multiline": true,
      "required": false,
      "description": "One per line: key=/container/path",
      "template": "150-conf-create-storage-volumes-for-lxc.json",
      "templatename": "Create Storage Volumes for LXC",
      "default": "data=var/lib/mysql"
    },
    {
      "id": "envs",
      "name": "Environment Variables",
      "type": "string",
      "advanced": true,
      "multiline": true,
      "description": "Environment variables in key=value format, one per line. Each line sets an environment variable in the container configuration. Example:\nMYAPP_HOST=localhost\nMYAPP_PORT=8080\nDATABASE_URL=postgresql://localhost:5432/mydb",
      "template": "170-conf-set-environment-variables-in-lxc.json",
      "templatename": "Env Variables in LXC",
      "default": "GID=999\nMARIADB_DATABASE=appdb\nMARIADB_PASSWORD={{ MARIADB_PASSWORD }}\nMARIADB_PORT=3306\nMARIADB_ROOT_PASSWORD={{ MARIADB_ROOT_PASSWORD }}\nMARIADB_USER=appuser\nMARIADB_VERSION=11\nUID=999"
    }
  ],
  "properties": [
    {
      "id": "oci_image",
      "value": "mariadb:11"
    },
    {
      "id": "uid",
      "value": "999"
    },
    {
      "id": "username",
      "value": "root"
    }
  ],
  "installation": {},
  "url": "https://github.com/MariaDB/mariadb-docker",
  "documentation": "https://hub.docker.com/_/mariadb/",
  "source": "https://github.com/MariaDB/mariadb-docker",
  "vendor": "MariaDB Community",
  "tags": [
    "database"
  ]
}