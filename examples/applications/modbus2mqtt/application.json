{
  "name": "modbus2mqtt",
  "description": "Modbus2MQTT is a Modbus to MQTT gateway for connecting industrial devices to IoT networks.",
  "extends": "oci-image",
  "icon": "icon.png",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "required": false,
      "type": "string",
      "description": "Hostname for the LXC container",
      "template": "100-conf-create-configure-lxc.json",
      "templatename": "Create and Configure LXC",
      "default": "modbus2mqtt"
    },
    {
      "id": "volumes",
      "name": "Volumes",
      "type": "string",
      "multiline": true,
      "required": false,
      "description": "One per line: key=/container/path",
      "template": "150-conf-create-storage-volumes-for-lxc.json",
      "templatename": "Create Storage Volumes for LXC",
      "default": "config=config\ndata=data\nssl=ssl"
    },
    {
      "id": "envs",
      "name": "Environment Variables",
      "type": "string",
      "advanced": true,
      "multiline": true,
      "description": "Environment variables in key=value format, one per line. Each line sets an environment variable in the container configuration. Example:\nMYAPP_HOST=localhost\nMYAPP_PORT=8080\nDATABASE_URL=postgresql://localhost:5432/mydb",
      "template": "170-conf-set-environment-variables-in-lxc.json",
      "templatename": "Env Variables in LXC",
      "default": "GID=999\nMODBUS2MQTT_PORT=3000\nMODBUS2MQTT_VERSION=latest\nTZ=Europe/Berlin\nUID=999"
    }
  ],
  "properties": [
    {
      "id": "oci_image",
      "value": "ghcr.io/modbus2mqtt/modbus2mqtt:latest"
    },
    {
      "id": "uid",
      "value": "999"
    },
    {
      "id": "username",
      "value": "root"
    }
  ],
  "installation": {},
  "url": "https://github.com/modbus2mqtt/hassio-addon-repository",
  "documentation": "https://github.com/modbus2mqtt/modbus2mqtt/blob/main/README.md",
  "source": "https://github.com/modbus2mqtt/modbus2mqtt",
  "vendor": "Carcam 360",
  "tags": [
    "iot",
    "messaging"
  ]
}