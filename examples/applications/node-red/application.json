{
  "name": "node-red",
  "description": "Node-RED is a flow-based programming tool for wiring together hardware devices, APIs and online services.",
  "extends": "oci-image",
  "icon": "icon.svg",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "required": false,
      "type": "string",
      "description": "Hostname for the LXC container",
      "template": "100-conf-create-configure-lxc.json",
      "templatename": "Create and Configure LXC",
      "default": "node-red"
    },
    {
      "id": "volumes",
      "name": "Volumes",
      "type": "string",
      "multiline": true,
      "required": false,
      "description": "One per line: key=/container/path",
      "template": "150-conf-create-storage-volumes-for-lxc.json",
      "templatename": "Create Storage Volumes for LXC",
      "default": "data=data\ncerts=certs"
    },
    {
      "id": "envs",
      "name": "Environment Variables",
      "type": "string",
      "advanced": true,
      "multiline": true,
      "default": "GID=1000\nNODERED_PORT=1880\nNODERED_VERSION=latest\nTZ=Europe/Berlin\nUID=1000",
      "description": "Environment variables to substitute in initial_command.",
      "template": "107-conf-oci-lxc-configuration.json",
      "templatename": "Configure LXC for OCI"
    }
  ],
  "properties": [
    {
      "id": "oci_image",
      "value": "nodered/node-red:latest"
    },
    {
      "id": "uid",
      "value": "1000"
    },
    {
      "id": "username",
      "value": "root"
    }
  ],
  "installation": {
    "pre_start": [
      "0-upload-settings-js.json",
      "1-upload-server-crt.json",
      "2-upload-server-key.json"
    ]
  },
  "source": "https://github.com/node-red/node-red-docker",
  "tags": [
    "api",
    "iot"
  ]
}