{
  "name": "pgAdmin",
  "description": "pgAdmin is a feature-rich open source administration and development platform for PostgreSQL.",
  "extends": "oci-image",
  "icon": "pgadmin_94126.svg",
  "parameters": [
    {
      "id": "hostname",
      "name": "Hostname",
      "required": false,
      "type": "string",
      "description": "Hostname for the LXC container",
      "template": "100-conf-create-configure-lxc.json",
      "templatename": "Create and Configure LXC",
      "default": "pgadmin4"
    },
    {
      "id": "volumes",
      "name": "Volumes",
      "type": "string",
      "multiline": true,
      "required": false,
      "description": "One per line: key=/container/path",
      "template": "150-conf-create-storage-volumes-for-lxc.json",
      "templatename": "Create Storage Volumes for LXC",
      "default": "pgadmin=var/lib/pgadmin\ncerts=certs\ndata=var/lib/postgresql/data"
    },
    {
      "id": "envs",
      "name": "Environment Variables",
      "type": "string",
      "advanced": true,
      "multiline": true,
      "default": "PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False\nPGADMIN_CONFIG_SERVER_MODE=True\nPGADMIN_DEFAULT_EMAIL=admin@local.dev\nPGADMIN_DEFAULT_PASSWORD={{ PGADMIN_DEFAULT_PASSWORD }}\nPGADMIN_EMAIL=admin@local.dev\nPGADMIN_ENABLE_TLS=True\nPGADMIN_PORT=5050\nPGADMIN_VERSION=latest",
      "description": "Environment variables to substitute in initial_command.",
      "template": "107-conf-oci-lxc-configuration.json",
      "templatename": "Configure LXC for OCI"
    }
  ],
  "properties": [
    {
      "id": "oci_image",
      "value": "dpage/pgadmin4:latest"
    },
    {
      "id": "uid",
      "value": "0"
    },
    {
      "id": "username",
      "value": "root"
    }
  ],
  "installation": {
    "pre_start": [
      "0-upload-server-cert.json",
      "1-upload-server-key.json"
    ]
  },
  "tags": [
    "database"
  ],
  "stacktype": "postgres"
}