{
  "$id": "application",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "extends": { "type": "string", "pattern": "^(local:|[^:]+).*$" },
    "description": { "type": "string" },
    "icon": { "type": "string", "default": "icon.png" },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Application tags for categorization. Must match tags defined in json/tags.json"
    },
    "url": { "type": "string" },
    "documentation": { "type": "string" },
    "source": { "type": "string" },
    "vendor": { "type": "string" },
    "installation": { "$ref": "templatelist" },
    "copy-upgrade": { "$ref": "templatelist" },
    "copy-rollback": { "$ref": "templatelist" }
  },
  "required": ["name", "installation"],
  "additionalProperties": false
}
